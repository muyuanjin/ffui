{
  "pattern": "**/*",
  "minLines": 12,
  "minTokens": 120,
  "threshold": 0,
  "format": ["typescript", "tsx", "markup"],
  "formatsExts": {
    "typescript": ["ts"],
    "tsx": ["tsx"],
    "markup": ["vue"]
  },
  "reporters": ["console", "html", "json"],
  "output": ".jscpd/frontend",
  "ignore": [
    "**/*.spec.*",
    "**/*.test.*",
    "**/__tests__/**",
    "**/components/__tests__/**",
    "**/components/ui/**",
    "**/locales/**"
  ],
  "exitCode": 1
}
