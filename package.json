{
  "name": "ffui",
  "private": true,
  "version": "0.2.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "check:all": "node scripts/check-all.mjs",
    "check:i18n": "node scripts/check-i18n.mjs",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run",
    "format": "prettier --write . && cargo fmt --manifest-path src-tauri/Cargo.toml",
    "format:check": "prettier --check . && cargo fmt --manifest-path src-tauri/Cargo.toml -- --check",
    "format:staged": "lint-staged",
    "format:rust:staged": "node scripts/format-rust-staged.mjs",
    "docs:screenshots": "node tools/docs-screenshots/capture.mjs",
    "tauri": "tauri",
    "tauri:dev": "vite build && tauri dev",
    "build:exe": "npm run tauri -- build --no-bundle",
    "prepare": "husky"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-os": "^2.3.2",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "@tauri-apps/plugin-window-state": "^2.4.1",
    "@vueuse/core": "^14.1.0",
    "@vueuse/integrations": "^14.1.0",
    "apexcharts": "^5.3.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "echarts": "^6.0.0",
    "gsap": "^3.13.0",
    "highlight.js": "11.11.1",
    "lucide-vue-next": "^0.555.0",
    "reka-ui": "^2.6.1",
    "sortablejs": "^1.15.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vue": "^3.5.13",
    "vue-echarts": "^8.0.1",
    "vue-i18n": "^11.2.2",
    "vue-sonner": "^2.0.9",
    "vue3-apexcharts": "^1.10.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@tauri-apps/cli": "^2",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.22",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "shadcn-vue": "^2.4.0",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^4.0.15",
    "vue-tsc": "^2.1.10"
  },
  "overrides": {
    "stylus": "^0.64.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,cjs,mjs,json,css,scss,md,yml,yaml,html}": [
      "prettier --write"
    ]
  }
}
