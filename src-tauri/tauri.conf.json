{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FFUI",
  "version": "0.2.0",
  "identifier": "com.muyuanjin.ffui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5188",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "FFUI",
        "width": 1280,
        "height": 720,
        "decorations": false,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "backgroundColor": "#020617",
        "visible": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline'; img-src 'self' asset: http://asset.localhost asset: https://asset.localhost blob: data:; media-src 'self' asset: http://asset.localhost asset: https://asset.localhost blob: data:; font-src 'self' asset: http://asset.localhost asset: https://asset.localhost data:",
      "dangerousDisableAssetCspModification": ["style-src"],
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/*.[mM][kK][vV]",
          "**/*.[mM][pP]4",
          "**/*.[mM][oO][vV]",
          "**/*.[mM]4[vV]",
          "**/*.[wW][eE][bB][mM]",
          "**/*.[aA][vV][iI]",
          "**/*.[wW][mM][vV]",
          "**/*.[rR][mM][vV][bB]",
          "**/*.[mM][xX][fF]",
          "**/*.[mM]3[uU]8",
          "**/*.[mM][pP][dD]",
          "**/*.[fF][lL][vV]",
          "**/*.[mM][pP][gG]",
          "**/*.[mM][pP][eE][gG]",
          "**/*.[tT][sS]",
          "**/*.[mM]2[tT][sS]",
          "**/*.[mM][tT][sS]",
          "**/*.3[gG][pP]",
          "**/*.[oO][gG][vV]",
          "**/*.[mM][pP]3",
          "**/*.[mM]4[aA]",
          "**/*.[aA][aA][cC]",
          "**/*.[aA][lL][aA][cC]",
          "**/*.[fF][lL][aA][cC]",
          "**/*.[wW][aA][vV]",
          "**/*.[oO][gG][gG]",
          "**/*.[oO][pP][uU][sS]",
          "**/*.[wW][mM][aA]",
          "**/*.[aA][iI][fF][fF]",
          "**/*.[aA][iI][fF]",
          "**/*.[aA][cC]3",
          "**/*.[jJ][pP][gG]",
          "**/*.[jJ][pP][eE][gG]",
          "**/*.[pP][nN][gG]",
          "**/*.[gG][iI][fF]",
          "**/*.[wW][eE][bB][pP]",
          "**/*.[bB][mM][pP]",
          "**/*.[tT][iI][fF]",
          "**/*.[tT][iI][fF][fF]",
          "**/*.[aA][vV][iI][fF]",
          "**/*.[hH][eE][iI][cC]",
          "**/*.[hH][eE][iI][fF]",
          "**/*.[tT][tT][fF]",
          "**/*.[oO][tT][fF]"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENGRjY0OUFEMDJCMEVERTAKUldUZzdiQUNyVW4yenhjU1hYa3hOZnFSdEwwdjRrbGNQOTJnOWhIbjVBUTl5czdJNkVmTGU5TGEK",
      "endpoints": ["https://github.com/muyuanjin/ffui/releases/latest/download/latest.json"],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
